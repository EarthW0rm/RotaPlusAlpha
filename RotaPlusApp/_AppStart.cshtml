        .Include("~/Scripts/plugins/jquery/jquery-2.2.1.js")
        .Include("~/Scripts/plugins/jquery/jquery-ui-1.11.4.js")
        .Include("~/Scripts/plugins/bootstrap/bootstrap.js")
        .Include("~/Scripts/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.js")
        .Include("~/Scripts/plugins/underscore/underscore-awesomer.js")
        .Include("~/Scripts/plugins/angular/angular.js")
        .Include("~/Scripts/plugins/angular/i18n/angular-locale_pt-br.js")
        .Include("~/Scripts/plugins/angular/angular-animate.js")
        .Include("~/Scripts/plugins/angular/angular-aria.js")
