        .Include("~/Scripts/plugins/angular/angular-csp.css")
        .Include("~/Content/plugins/bootstrap/bootstrap.css")
        .Include("~/Content/plugins/bootstrap/bootstrap-theme.css")
        .Include("~/Content/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.css")
        .Include("~/Content/plugins/font-awesome/font-awesome.min.css")
        .Include("~/Content/main.css"));

}

